#!/usr/bin/env bash

# This script probably won't work on your local machine
# as finn.logic.at is only reachable from rick.logic.at.
# Thus, to install the website we recommend to ssh into
# rick.logic.at (with the same user), then clone the
# gapt-website repository there and then run the script

if [ -z "$1" ]; then
  echo Usage: ./install_website username
  echo
  echo username is your user name on finn.logic.at
  exit 1
fi
sftp -b install_website.sftp-batch $1@finn.logic.at
